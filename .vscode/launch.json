{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Generate CDP API",
      "program": "${workspaceFolder}/scripts/generate-cdp-api.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate DAP API",
      "program": "${workspaceFolder}/scripts/generate-dap-api.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "program": "${workspaceFolder}/out/out/debugServerMain.js",
      "args": ["4711"],
      // "preLaunchTask": "npm: watch"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (Flat Session)",
      "program": "${workspaceFolder}/out/out/flatSessionLauncher.js",
      "args": ["4712"],
      // "preLaunchTask": "npm: watch"
    },
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--enable-proposed-api=ms-vscode.js-debug",
        "--extensionDevelopmentPath=${workspaceFolder}/out"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      // "preLaunchTask": "npm: watch"
    },
    {
      "name": "Extension (packaged)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--enable-proposed-api=ms-vscode.js-debug",
        "--extensionDevelopmentPath=${workspaceFolder}/dist"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      // "preLaunchTask": "npm: watch"
    },
    {
      "name": "Dogfood",
      "type": "pwa",
      "request": "launch",
      "command": "code-insiders --disable-extensions --enable-proposed-api=ms-vscode.js-debug --extensionDevelopmentPath=${workspaceFolder}/out",
      // "preLaunchTask": "npm: watch"
    },
		{
			"name": "Run Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/out/test/testRunner"
			],
			"outFiles": ["${workspaceFolder}/out/out/test/**/*.js"],
			// "preLaunchTask": "npm: watch"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run int tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["--timeout", "10000", "-u", "tdd", "--colors", "--reporter", "out/out/int-chrome/testSupport/loggingReporter.js", "./out/out/int-chrome/**/*.test.js",
        // "--grep", "Variables scopes"
      ],
      "outFiles": ["${workspaceFolder}/out/out/**/*.js"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DISPLAY": ":1.0"
      }
    },
		{
			"name": "Reset Results",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/out/test/testRunner"
      ],
      "env": {
        "RESET_RESULTS": "true"
      },
			"outFiles": ["${workspaceFolder}/out/out/test/**/*.js"],
			// "preLaunchTask": "npm: watch"
    },
    {
      "name": "Debug Gulp",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": ["move-bundle-files"]
    }
  ]
}
