{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "base": "$gulp-tsc",
        "applyTo": "closedDocuments",
        "background": {
          "beginsPattern": "Starting",
          "endsPattern": "Finished"
        }
      },
      "isBackground": true,
      // https://github.com/microsoft/vscode/issues/83016
      // "presentation": {
      // 	"reveal": "never"
      // },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
