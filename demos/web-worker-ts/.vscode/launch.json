{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "[web-worker-ts] Client/Server",
      "url": "http://localhost:5002",
      "preLaunchTask": "npm: build",
      "webRoot": "${workspaceFolder}/out",
      "server": {
        "program": "${workspaceFolder}/node_modules/serve/bin/serve.js",
        "args": ["-p", "5002", "./out"]
      }
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "[web-worker-ts] for Server",
      "program": "${workspaceFolder}/node_modules/serve/bin/serve.js",
      "args": ["-p", "5002", "./out"],
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "[web-worker-ts] for Client",
      "trace": true,
      "smartStep": false,
      "url": "http://localhost:5002",
      "webRoot": "${workspaceFolder}/out",
    }
  ],
  "compounds": [
    {
      "name": "[web-worker-ts]",
      "configurations": ["[web-worker-ts] for Server", "[web-worker-ts] for Client"]
    }
  ]
}
