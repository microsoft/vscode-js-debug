{
  "name": "js-debug",
  "displayName": "JavaScript Debugger",
  "version": "1.60.0",
  "publisher": "ms-vscode",
  "author": {
    "name": "Microsoft Corporation"
  },
  "keywords": [
    "pwa",
    "javascript",
    "node",
    "chrome",
    "debugger"
  ],
  "description": "An extension for debugging Node.js programs and Chrome.",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0-insider",
    "node": ">=10"
  },
  "icon": "resources/logo.png",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-pwa.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-pwa/issues"
  },
  "scripts": {
    "compile": "gulp",
    "watch": "gulp watch",
    "fmt": "gulp format",
    "prepare": "husky install",
    "package": "gulp package",
    "publish": "gulp publish",
    "updatetypes": "cd src/typings && vscode-dts dev && vscode-dts master",
    "updatenodeapi": "python src/build/getNodePdl.py && prettier --write src/build/nodeCustom.ts",
    "generateapis": "node out/src/build/generateDap.js && node out/src/build/generateCdp.js",
    "test": "gulp && npm-run-all --parallel test:unit test:types test:golden test:lint",
    "test:types": "tsc --noEmit",
    "test:unit": "mocha --config .mocharc.unit.js",
    "test:golden": "node ./out/src/test/runTest.js",
    "test:lint": "gulp lint"
  },
  "dependencies": {
    "@c4312/chromehash": "^0.2.0",
    "acorn": "^8.4.0",
    "acorn-loose": "^8.1.0",
    "astring": "^1.7.5",
    "color": "^3.1.3",
    "data-uri-to-buffer": "^3.0.1",
    "default-browser": "^2.0.1",
    "estraverse": "^5.2.0",
    "execa": "^5.1.1",
    "glob-stream": "^6.1.0",
    "got": "^11.8.2",
    "inversify": "^5.1.1",
    "js-xxhash": "^1.0.4",
    "jsonc-parser": "^3.0.0",
    "linkifyjs": "^2.1.9",
    "micromatch": "^4.0.4",
    "path-browserify": "^1.0.1",
    "preact": "^10.5.13",
    "reflect-metadata": "^0.1.13",
    "signale": "^1.4.0",
    "source-map": "0.8.0-beta.0",
    "source-map-support": "^0.5.19",
    "split2": "^3.2.2",
    "vscode-js-debug-browsers": "^1.0.4",
    "vscode-nls": "^5.0.0",
    "vscode-tas-client": "^0.1.22",
    "ws": "^7.5.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "tabWidth": 2
  },
  "devDependencies": {
    "@c4312/matcha": "^1.3.1",
    "@mixer/parallel-prettier": "^2.0.1",
    "@pptr/testrunner": "^0.8.0",
    "@types/chai": "^4.2.19",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-string": "^1.4.2",
    "@types/chai-subset": "^1.3.3",
    "@types/color": "^3.0.1",
    "@types/debug": "^4.1.5",
    "@types/del": "^4.0.0",
    "@types/diff": "^5.0.0",
    "@types/estraverse": "^5.1.0",
    "@types/estree": "0.0.48",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.3",
    "@types/glob-stream": "^6.1.0",
    "@types/gulp": "^4.0.8",
    "@types/js-beautify": "^1.13.1",
    "@types/json-schema": "^7.0.7",
    "@types/linkifyjs": "^2.1.3",
    "@types/long": "^4.0.1",
    "@types/marked": "^2.0.3",
    "@types/micromatch": "^4.0.1",
    "@types/minimist": "^1.2.1",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/prettier": "^2.3.0",
    "@types/signale": "^1.4.1",
    "@types/sinon": "^10.0.2",
    "@types/split2": "^3.2.0",
    "@types/stream-buffers": "^3.0.3",
    "@types/tmp": "^0.2.0",
    "@types/ws": "^7.4.5",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "chai-subset": "^1.6.0",
    "css-loader": "^5.2.6",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "diff": "^5.0.0",
    "eslint": "^7.29.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-react": "^7.24.0",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "gulp": "^4.0.2",
    "gulp-filter": "^7.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-tsb": "^4.0.6",
    "gulp-util": "^3.0.8",
    "husky": "^6.0.0",
    "marked": "^2.1.2",
    "merge2": "^1.4.1",
    "minimist": "^1.2.5",
    "mocha": "^9.0.1",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "playwright": "^1.12.2",
    "prettier": "^2.3.1",
    "sinon": "^11.1.1",
    "stream-buffers": "^3.0.2",
    "style-loader": "^2.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "unzipper": "^0.10.11",
    "vsce": "^1.96.1",
    "vscode-debugadapter-testsupport": "^1.47.0",
    "vscode-debugprotocol": "^1.47.0",
    "vscode-nls-dev": "^3.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.40.0",
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "main": "./src/extension.js",
  "enableProposedApi": true,
  "activationEvents": [
    "onDebugDynamicConfigurations",
    "onDebugInitialConfigurations",
    "onDebugResolve:node",
    "onDebugResolve:extensionHost",
    "onDebugResolve:chrome",
    "onTerminalProfile:extension.js-debug.debugTerminal"
  ],
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "views": {
      "debug": [
        {
          "id": "jsBrowserBreakpoints",
          "name": "Browser breakpoints",
          "when": "debugConfigurationType == 'pwa-chrome'"
        }
      ]
    },
    "terminal": {
      "profiles": [
        {
          "id": "extension.js-debug.debugTerminal",
          "title": "%debug.terminal.label%",
          "icon": "$(debug)"
        }
      ]
    }
  }
}
