{
  "name": "cdp-debug",
  "displayName": "CDP Debug",
  "version": "0.9.0",
  "publisher": "",
  "description": "CDP debugger extension.",
  "author": {
    "name": "Microsoft Corporation",
    "email": "pfeldman@microsoft.com"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.30.0-insider",
    "node": "^8.9.3"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-mock-debug.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-mock-debug/issues"
  },
  "scripts": {
    "prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "tslint": "tslint ./src/**/*.ts",
    "watch": "tsc -w -p ./src",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "tsc -p ./src && node ./out/runTests.js"
  },
  "dependencies": {
    "vscode-nls": "^4.1.1",
    "ws": "^7.0.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.4",
    "@types/node": "^8.9.3",
    "@types/ws": "^6.0.1",
    "tslint": "5.11.0",
    "typescript": "^3.1.6",
    "vsce": "1.53.2",
    "vscode": "1.1.21"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onDebug",
    "onView:cdpBreakpoints"
  ],
  "contributes": {
    "views": {
      "debug": [
        {
          "id": "cdpBreakpoints",
          "name": "Break on"
        }
      ]
    },
    "commands": [
      {
        "command": "cdp.enableCustomBreakpoint",
        "title": "ENABLE"
      },
      {
        "command": "cdp.disableCustomBreakpoint",
        "title": "DISABLE"
      },
      {
        "command": "cdp.enableCustomBreakpointGroup",
        "title": "ENABLE ALL"
      },
      {
        "command": "cdp.disableCustomBreakpointGroup",
        "title": "DISABLE ALL"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cdp.enableCustomBreakpoint",
          "when": "view == cdpBreakpoints && viewItem == cdpCustomBreakpointDisabled",
          "group": "inline"
        },
        {
          "command": "cdp.disableCustomBreakpoint",
          "when": "view == cdpBreakpoints && viewItem == cdpCustomBreakpointEnabled",
          "group": "inline"
        },
        {
          "command": "cdp.enableCustomBreakpointGroup",
          "when": "view == cdpBreakpoints && viewItem == cdpCustomBreakpointGroupDisabled",
          "group": "inline"
        },
        {
          "command": "cdp.disableCustomBreakpointGroup",
          "when": "view == cdpBreakpoints && viewItem == cdpCustomBreakpointGroupEnabled",
          "group": "inline"
        }
      ]
    },
    "breakpoints": [
      {
        "language": "javascript"
      },
      {
        "language": "typescriptreact"
      },
      {
        "language": "javascriptreact"
      },
      {
        "language": "fsharp"
      },
      {
        "language": "html"
      }
    ],
    "debuggers": [
      {
        "type": "cdp",
        "label": "Run in Chrome with CDP",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "url": {
                "type": "string",
                "description": "Page url",
                "default": "http://localhost:8080"
              },
              "webRoot": {
                "type": "string",
                "description": "Path to source files",
                "default": "${workspaceFolder}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "cdp",
            "request": "launch",
            "name": "Run in Chrome"
          }
        ],
        "configurationSnippets": [
          {
            "label": "Run in Chrome with CDP",
            "description": "A new configuration for running Chrome with CDP",
            "body": {
              "type": "cdp",
              "request": "launch",
              "name": "Run in Chrome with CDP",
              "url": "http://localhost:8080",
              "webRoot": "${workspaceFolder}"
            }
          }
        ]
      }
    ]
  }
}
